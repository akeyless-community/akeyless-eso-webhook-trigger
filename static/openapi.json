{
    "openapi": "3.0.0",
    "info": {
        "title": "ExternalSecret Updater API",
        "version": "1.0.6",
        "description": "API for updating ExternalSecrets in Kubernetes based on webhook events"
    },
    "paths": {
        "/webhook": {
            "post": {
                "summary": "Process webhook events",
                "description": "Receives webhook events and updates ExternalSecrets if necessary",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                },
                "security": [
                    {
                        "basicAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Event": {
                "type": "object",
                "properties": {
                    "event_id": {
                        "type": "integer"
                    },
                    "event_level": {
                        "type": "string"
                    },
                    "event_type": {
                        "type": "string"
                    },
                    "item_name": {
                        "type": "string"
                    },
                    "item_id": {
                        "type": "integer"
                    },
                    "item_type": {
                        "type": "string"
                    },
                    "payload": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "event_id",
                    "event_level",
                    "event_type",
                    "item_name",
                    "item_id",
                    "item_type",
                    "payload"
                ]
            }
        },
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic",
                "description": "Basic authentication for accessing the API. Provide username and password."
            }
        }
    }
}
